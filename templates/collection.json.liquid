{% layout 'json' %}
{% paginate collection.products by 24 %}
{
  "id": {% if collection.id %}{{ collection.id }}{% else %}0{% endif %},
  "title": {{ collection.title | json }},
  "totalPages": {{ paginate.pages | json }},
  "products": [
    {% for product in collection.products %}
    {% include 'product-item-json' %}
    {% unless forloop.last %},
    {% endunless %}{% endfor %}
  ]
}
{% endpaginate %}

